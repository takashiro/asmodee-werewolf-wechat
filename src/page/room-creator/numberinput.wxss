
.number-input {
  line-height: 90px;
  text-align: left;
  font-size: 15pt;
}

.number-input .decrease-button,
.number-input .increase-button {
		display: inline-block;
		width: 2em;
		height: 2em;
		line-height: 2.2em;
		text-align: center;
		border: 0px solid;
		padding: 0;
		background: white;
		color: black;
		border-radius: 1em;
		cursor: pointer;
		font-family: 'Courier New', Courier, monospace;
}


.number-input .decrease-button::before {
  content: 'ー';
}

.number-input .increase-button::before {
  content: '＋';
}

.number-input .input {
  display: inline-block;
  width: 3em;
  height: 2em;
  box-sizing: content-box;
  text-align: center;
  margin: 0 10px;
  border-radius: 5px;
  color: black;
}
