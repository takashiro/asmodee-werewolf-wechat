<import src="../global.wxml" />
<import src="../role-list.wxml" />

<view class="container">
  <template is="header" />

  <view class="room">
    <text class="info">房间号 {{room.id}}</text>

    <view class="team" wx:for="{{teams}}" wx:key="team-{item.team.id}">
      <text class="header">{{item.team.name}}</text>
      <template is="role-list" data="{{roles: item.roles}}" />
    </view>

    <RoleViewer room-id="{{room.id}}" room-key="{{room.salt}}" />

    <view class="button-area">
      <button bindtap="handleReturn">返回</button>
      <button open-type="share">邀请好友</button>
    </view>
  </view>

  <template is="footer" />
</view>
