
.role {
  width: 64px;
  height: 90px;
  font-size: 11pt;
  text-align: center;
}

.role .icon {
  width: 64px;
  height: 64px;
  overflow: hidden;
  border-radius: 32px;
  position: relative;
}

.role .icon .image {
  width: 80px;
  height: 112px;
  position: absolute;
  top: -9px;
  left: -7px;
}

.selected .icon {
  box-shadow: #fed840 0 0 4px 2px;
}
